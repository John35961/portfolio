<% content_for :meta_title, "#{ABOUT['full_name'].titleize} - #{t_scoped(:sign_up).capitalize}" %>

<div class="container flex flex-col w-full p-5 mx-auto my-5 lg:w-1/4">
  <%= render 'devise/shared/back_to_site', title: t_scoped(:back_to_site) %>
  <div class="flex items-center justify-between">
    <%= image_tag 'apple-touch-icon-76x76.png', class:"mr-2 rounded w-12" %>
    <h1 class="text-3xl font-bold font-heading text-slate-800"><%= t_scoped(:admin).capitalize %></h1>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col my-3 field">
      <%= f.label t_scoped(:email), class:"text-slate-800 mr-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"rounded" %>
    </div>
    <div class="flex flex-col my-3 field">
      <div class="flex items-center">
        <%= f.label t_scoped(:password), class:"text-slate-800 mr-2" %>
        <% if @minimum_password_length %>
          <span class="text-slate-400">(<%= t_scoped(:password_hint, count: @minimum_password_length) %>)</span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class:"rounded" %>
    </div>
    <div class="flex flex-col my-3 field">
      <%= f.label t_scoped(:password_confirmation), class:"text-slate-800 mr-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"rounded" %>
    </div>
    <div class="flex text-slate-800 group actions">
      <%= f.submit t_scoped(:sign_up).capitalize, class:"hover:cursor-pointer" %>
      <p class="ml-2 transition-transform group-hover:translate-x-3">&#8594;</p>
    </div>
  <% end %>
</div>
