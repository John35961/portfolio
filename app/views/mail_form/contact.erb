<body style="background-color: rgb(239, 246, 255);">
  <div style="@import url('https://fonts.googleapis.com/css2?family=Manrope:wght@300;500;700&family=Syne:wght@400;500;600;700;800&display=swap'); padding: 1.25rem; font-family: 'Manrope', sans-serif; color: rgb(30, 41, 59);">
    <div style="margin-top: 0.75rem; margin-bottom: 0.75rem; text-align: center;">
      <h1 style="font-size: 1.5rem; font-family: 'Syne', sans-serif; margin: 0 0;"><%= t_scoped(:title).capitalize %></h1>
      <small>
        <%= link_to ENV['APEX'], root_url, style:'opacity: 0.5; text-decoration:none;' %>
      </small>
    </div>
    <div style="margin-top: 1.25rem; margin-bottom: 1.25rem;">
      <div style="display: flex; flex-direction: column; margin: 1rem 0 1rem 0;">
        <small style="opacity: 0.5" style="font-family: 'Syne', sans-serif;"><%= t_scoped(:name).capitalize %></small>
        <p style="margin: 0 0;"><%= @resource.name %></p>
      </div>
      <div style="display: flex; flex-direction: column; margin: 1rem 0 1rem 0;">
        <small style="opacity: 0.5" style="font-family: 'Syne', sans-serif;"><%= t_scoped(:email).capitalize %></small>
        <a href="mailto:<%= @resource.email %>?subject=<%= "#{t_scoped(:greeting, name: @resource.name)}" %>"><%= @resource.email %></a>
      </div>
      <div style="display: flex; flex-direction: column; margin: 1rem 0 1rem 0;">
        <small style="opacity: 0.5" style="font-family: 'Syne', sans-serif;"><%= t_scoped(:message).capitalize %></small>
        <p style="margin: 0 0;"><%= @resource.message %></p>
      </div>
    </div>
    <div style="margin-top: 0.75rem; margin-bottom: 0.75rem; text-align: center; opacity: 0.5">
      <small style="margin-left: 0.5rem; margin-right: 0.5rem;">
        <%= link_to t_scoped(:admin).capitalize, dashboard_url, style:'text-decoration:none' %> &#8594;
      </small>
      <small style="margin-left: 0.5rem; margin-right: 0.5rem;">
        <%= link_to t_scoped(:analytics).capitalize, active_analytics_url, style:'text-decoration:none' %> &#8594;
      </small>
    </div>
  </div>
</body>
