<div class="container flex flex-col w-full p-5 mx-auto my-5 lg:w-1/2">
  <%= link_to '← Dashboard', dashboard_path %>
  <div class="flex items-center justify-between">
    <h1 class="my-3 text-3xl font-heading"><%= link_to @project.name, project_path(@project), target:'_blank', class:'underline underline-offset-1' %></h1>
    <div class="flex flex-col text-end">
      <%= render 'partials/project_history', project: @project %>
    </div>
  </div>
  <%= render 'partials/project_form', project: @project %>
</div>
