<% content_for :meta_title, "#{t_scoped(:admin).capitalize} - #{t_scoped(:edit).capitalize} #{@project.name}" %>

<div class="container flex flex-col w-full p-5 mx-auto my-5 lg:w-1/2">
  <%= link_to dashboard_path do %>
    <span>&#8592; <%= t_scoped(:projects).capitalize %></span>
  <% end %>
  <div class="flex items-center justify-between">
    <h1 class="my-3 text-3xl font-heading">
      <%= link_to @project.name, project_path(@project), target:'_blank', class:'underline underline-offset-1' %>
    </h1>
    <div class="flex flex-col text-end">
      <small class="opacity-50">
        <%= t_scoped(:posted).capitalize %> <%= time_ago_in_words(project.created_at) %>
      </small>
      <small class="opacity-50">
        <%= project.created_at != project.updated_at ? "#{t_scoped(:edited).capitalize} #{time_ago_in_words(project.updated_at)}" : t_scoped(:never_edited) %>
      </small>
    </div>
  </div>
  <%= render 'projects/partials/form', project: @project %>
</div>
