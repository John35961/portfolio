<%= simple_form_for contact do |f| %>
  <div class="flex flex-col items-center p-5">
    <div class="flex flex-col w-full p-5 rounded-lg md:w-1/2 bg-blue-50">
      <div class="flex flex-col my-3">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, placeholder: t_scoped(:name_placeholder), class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0 placeholder:text-slate-300' %>
      </div>
      <div class="flex flex-col my-3">
        <%= f.label :email %>
        <%= f.text_field :email, required: true, placeholder: t_scoped(:email_placeholder), class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0 placeholder:text-slate-300' %>
      </div>
      <div class="flex flex-col my-3">
        <%= f.label :message %>
        <%= f.text_area :message, rows: 4, cols: 40, required: true, placeholder: t_scoped(:message_placeholders, name: ABOUT['first_name'].capitalize).sample, class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0 placeholder:text-slate-300' %>
      </div>
      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, hint: t_scoped(:hint) %>
      </div>
      <div class="flex justify-center">
        <%= f.submit t_scoped(:send).capitalize, class:'relative hover:cursor-pointer my-3 font-body rounded-lg p-3 bg-primary text-blue-50 w-full xl:w-1/2' %>
      </div>
      <small class="my-2 text-center opacity-50"><%= t_scoped(:notice).capitalize %></small>
    </div>
  </div>
<% end %>
