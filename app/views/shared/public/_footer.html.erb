<footer class="lg:fixed z-40 w-full bottom-[5px] lg:bottom-[10px] py-2 lg:py-0 bg-primary-900 select-none">
  <nav>
    <ul class="flex w-full mx-auto lg:w-2/3 justify-evenly">
      <% SOCIALS.each do |key, social| %>
        <li class="underline text-light-blue underline-offset-4 decoration-dotted decoration-light-blue">
          <%= link_to social['url'],
              target: social['target'] do %>
            <p class="hidden text-sm lg:block stext-light-blue"><%= social['name'] %></p>
            <p class="block text-2xl opacity-75 lg:hidden">
              <% unless social['svg-icon'].present? %>
                <%= fa_icon social['fa-icon'],
                    class:"text-light-blue",
                    alt: "#{social['name']} icon" %>
              <% else %>
                <%= image_tag social['svg-icon'][mode],
                    class:"relative top-[6px] w-[20px]",
                    alt: "#{social['name']} icon" %>
              <% end %>
            </p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>
</footer>
