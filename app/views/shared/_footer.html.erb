<footer class="fixed z-20 w-full bottom-[5px] lg:bottom-[10px]">
  <ul class="flex w-full mx-auto lg:w-2/3 justify-evenly">
    <% SOCIAL.each do |key, social| %>
      <%= link_to social['url'], target: social['target'], class:"text-blue-50 underline underline-offset-4 decoration-dotted decoration-blue-50" do %>
        <li class="hidden text-sm lg:block stext-blue-50"><%= social['name'] %></li>
        <p class="block text-2xl opacity-75 lg:hidden">
          <%= fa_icon social['fa-icon'], class:"text-blue-50" %>
        </p>
      <% end %>
    <% end %>
  </ul>
</footer>
