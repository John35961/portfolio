<% flash.each do |type, msg| %>
  <div data-controller="flash">
    <div class="fixed z-50 flex justify-center w-full my-3">
      <div data-flash-target="message"
           class="z-50 px-5 py-3 mx-auto my-0 text-xs rounded-lg w-fit transition-all duration-500 animate-slidein shadow-lg <%= conditional_flash_classes_for(type) %>">
        <%= msg %>
      </div>
    </div>
  </div>
<% end %>
