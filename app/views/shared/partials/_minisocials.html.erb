<ul class="flex items-center select-none">
  <% SOCIALS.each do |key, social| %>
    <li class="mr-6 transition-opacity opacity-75 hover:opacity-100">
      <%= link_to social['url'], target: social['target'] do %>
        <p class="text-2xl">
          <% unless social['svg-icon'].present? %>
            <%= fa_icon social['fa-icon'],
                width: 20,
                height: 20,
                class: conditional_minisocials_classes_for(mode),
                alt: "#{social['name']} icon" %>
          <% else %>
            <%= image_tag social['svg-icon'][mode],
                width: 20,
                height: 20,
                class: 'relative top-[1px] w-[20px]',
                alt: "#{social['name']} icon" %>
          <% end %>
        </p>
      <% end %>
    </li>
  <% end %>
  <li class="transition-opacity opacity-75 hover:opacity-100">
    <%= link_to "mailto:#{ABOUT['email']}?subject=#{t_scoped(:subject)}" do %>
      <p class="text-2xl">
        <%= fa_icon 'envelope',
            width: 20,
            height: 20,
            class: conditional_minisocials_classes_for(mode),
            alt: "Envelope icon" %>
      </p>
    <% end %>
  </li>
</ul>
