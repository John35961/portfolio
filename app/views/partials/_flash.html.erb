<% flash.each do |type, msg| %>
  <div class="mt-3">
    <div data-aos="fade" data-aos-duration="800" class="w-fit px-5 py-3 my-0 mx-auto text-xs rounded-lg <%= 'text-emerald-500 bg-emerald-50' if type == 'success'%> <%= 'text-red-500 bg-red-50' if type == 'error'%>">
      <%= msg %>
    </div>
  </div>
<% end %>
