<%= simple_form_for contact do |f| %>
  <div class="flex flex-col w-1/2 p-5">
    <%= f.label :name %>
    <%= f.text_field  :name, required: true, class:'rounded' %>
    <%= f.label :email %>
    <%= f.text_field :email, required: true, class:'rounded' %>
    <%= f.label :message %>
    <%= f.text_area :message, rows: 8, cols: 40, required: true, class:'rounded' %>
    <div class= "hidden">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <%= f.submit 'Send!' %>
  </div>
</div>
<% end %>
