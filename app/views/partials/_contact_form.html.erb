<%= simple_form_for contact do |f| %>
  <div class="flex flex-col items-center p-5">
    <div class="flex flex-col w-full p-5 rounded-lg md:w-1/2 bg-blue-50">
      <div class="flex flex-col my-3">
        <%= f.label :name %>
        <%= f.text_field  :name, required: true, class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0' %>
      </div>
      <div class="flex flex-col my-3">
        <%= f.label :email %>
        <%= f.text_field :email, required: true, class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0' %>
      </div>
      <div class="flex flex-col my-3">
        <%= f.label :message %>
        <%= f.text_area :message, rows: 4, cols: 40, required: true, class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0' %>
      </div>
      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div class="flex justify-center">
        <%= f.submit 'Send!', class:'relative hover:cursor-pointer my-3 font-body rounded-lg p-3 bg-slate-800 text-blue-50 w-full xl:w-1/2' %>
      </div>
    </div>
  </div>
<% end %>
