<%= simple_form_for contact do |f| %>
  <div class="flex flex-col items-center p-5">
    <div class="flex flex-col w-full lg:w-1/2">
      <div class="flex flex-col my-3">
        <%= f.label :name %>
        <%= f.text_field  :name, required: true, class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0' %>
      </div>
      <div class="flex flex-col my-3">
        <%= f.label :email %>
        <%= f.text_field :email, required: true, class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0' %>
      </div>
      <div class="flex flex-col my-3">
        <%= f.label :message %>
        <%= f.text_area :message, rows: 4, cols: 40, required: true, class:'rounded border-blue-50 focus:border-slate-400 focus:ring-0' %>
      </div>
      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <%= f.submit 'Send!', class:'hover:cursor-pointer font-body rounded-lg p-3 bg-blue-50 text-slate-800' %>
    </div>
  </div>
<% end %>
