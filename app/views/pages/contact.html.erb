<% content_for :meta_title, "#{ABOUT['full_name'].titleize} - #{t_scoped(:meta_title).capitalize}" %>
<% content_for :meta_description, t_scoped(:meta_description) %>

<div data-aos="fade"
     data-aos-duration="800"
     class="flex flex-col items-center lg:h-[90vh] justify-center">
  <div class="container flex flex-col-reverse justify-around px-5 py-12 mx-auto lg:pb-24 lg:flex-row">
    <div data-aos="fade" data-aos-delay="300" data-aos-duration="800" class="mt-6 lg:mt-0 flex flex-col w-[90%] lg:w-[40%] text-center lg:text-left self-center">
      <span class="text-xl font-black font-heading text-primary-900">
        <%= ABOUT['full_name'].titleize %>
      </span>
      <p class="my-3 text-primary-400"><%= t_scoped(:long_description) %></p>
      <div class="hidden my-2 lg:block">
        <%= render 'shared/partials/minisocials',
            mode: 'light' %>
      </div>
      <div class="text-xs underline opacity-50 text-primary-700 underline-offset-4 decoration-dotted decoration-primary-700">
        <%= link_to t_scoped(:legal).capitalize, legal_path  %>
      </div>
    </div>
    <div data-aos="fade" data-aos-delay="400" data-aos-duration="800" class="mb-6 lg:mb-0 flex flex-col lg:w-[40%] bg-light-blue rounded-lg p-5">
      <%= render 'contacts/partials/form',
          contact: @contact,
          mode: 'light' %>
    </div>
  </div>
</div>
