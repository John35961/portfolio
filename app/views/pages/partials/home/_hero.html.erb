<div data-controller="parallax"
     data-parallax-amplitude-value="-50"
     data-parallax-force-value="true"
     class="justify-center hidden w-[35%] p-5 md:flex" data-aos="fade" data-aos-duration="800">
  <section data-parallax-target="hero"
           oncontextmenu="return false;">
    <%= image_tag 'home/profile.png', draggable: false %>
  </section>
</div>
<div data-controller="parallax"
     data-parallax-amplitude-value="-75"
     data-parallax-force-value="true"
     class="hidden w-[65%] p-5 md:block">
  <section data-parallax-target="hero">
    <div class="flex flex-col items-center text-center">
      <div class="mb-5" data-aos="fade"
           data-aos-delay="100"
           data-aos-duration="800">
        <h1 class="text-4xl font-black font-heading text-slate-800">
          <%= "#{ABOUT['first_name'].capitalize} #{ABOUT['last_name'].capitalize}" %>
        </h1>
        <span class="text-sm text-slate-400"><%= t_scoped(:desktop_subline) %></span>
      </div>
      <p class="w-[90%] mb-5 text-slate-400 sm:hidden xl:block"
         data-aos="fade"
         data-aos-delay="200"
         data-aos-duration="800"><%= t_scoped(:desktop_description)%></p>
      <div data-aos="fade" data-aos-delay="300" data-aos-duration="800">
        <%= render 'partials/minisocials' %>
      </div>
    </div>
  </section>
</div>
<div data-controller="parallax"
     data-parallax-amplitude-value="-50"
     data-parallax-force-value="true"
     class="block p-5 md:hidden">
  <section data-parallax-target="hero">
    <span class="text-sm text-slate-400"
          data-aos="fade"
          data-aos-delay="100"
          data-aos-duration="800"><%= t_scoped(:mobile_subline) %></span>
    <h1 class="my-3 text-2xl font-black font-heading text-slate-800"
        data-aos="fade"
        data-aos-delay="200"
        data-aos-duration="800"><%= t_scoped(:mobile_description) %></h1>
    <div data-aos="fade"
         data-aos-delay="300"
         data-aos-duration="800">
      <%= render 'partials/minisocials' %>
    </div>
</div>
