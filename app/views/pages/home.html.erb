<section data-aos="fade" class="container sticky top-20 flex items-center h-[85vh] mx-auto -z-10 justify-evenly lg:flex-row">
  <div data-controller="parallax" data-parallax-amplitude-value="-50" class="relative hidden lg:block">
    <section data-parallax-target="hero">
      <%= image_tag 'home/profile_lg.png' %>
      <div data-controller="parallax" data-parallax-amplitude-value="-5">
        <%= image_tag 'home/profile_shape.svg', class:"top-0 left-0 absolute -z-20", data: { parallax_target: 'hero' } %>
      </div>
    </section>
  </div>
  <div data-controller="parallax" data-parallax-amplitude-value="-75">
    <section data-parallax-target="hero" class="text-center lg:text-left">
      <div class="flex flex-col">
        <p class="inline mr-2 text-2xl opacity-50">Hey! I'm</p>
        <h1 class="p-5 my-1 text-5xl font-black text-center rounded-lg lg:my-3 text-slate-800 lg:text-8xl font-heading bg-blue-50">Jean</h1>
        <div class="flex items-center my-1 lg:my-3">
          <span class="text-2xl opacity-50">I'm a</span>
          <span class="p-3 mx-3 text-2xl font-bold text-center rounded-lg text-slate-800 grow lg:text-5xl font-heading bg-blue-50">creative &#8592;</span>
          <span class="text-2xl opacity-50">guy with</span>
        </div>
        <div class="flex items-center my-1 lg:my-3">
          <span class="p-3 mx-3 text-2xl font-bold text-center rounded-lg text-slate-800 grow lg:text-5xl font-heading bg-blue-50">&#8594; technical</span>
          <span class="text-2xl opacity-50">skills</span>
        </div>
      </div>
    </section>
  </div>
</section>
<section class="relative top-10 rounded-t-[35px] lg:rounded-t-[50px] bg-blue-50">
  <section class="container flex flex-col p-5 mx-auto">
    <%= render 'partials/separator',
        title:"<span class='mx-1 text-3xl font-black text-slate-800 font-heading'>projects</span>
               <div class='inline-block rotate-45 text-slate-800/50'>&#8594;</div>",
        direction: "left" %>
    <div class="grid grid-cols-1 gap-5 lg:grid-cols-2 lg:gap-10">
      <% @projects.each_with_index do |project, idx| %>
        <%= link_to project_path(project) do %>
          <div data-aos="fade" data-aos-duration="800" data-aos-delay=<%= (idx + 1) * 100 %>>
            <%= render 'partials/card', project: project,
                                        idx: idx %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="mx-auto mt-16 mb-20">
      <%= render 'partials/minibutton',
          title: 'See all',
          path: projects_path,
          color: 'text-slate-800' %>
    </div>
  </section>
</section>
<section class="relative lg:h-screen z-10 rounded-t-[35px] lg:rounded-t-[50px] bg-slate-800">
  <section class="container p-5 mx-auto">
    <%= render 'partials/separator',
        title:"<div class='inline-block rotate-[135deg] text-blue-100/50'>&#8594;</div>
              <span class='mx-1 text-3xl font-black text-blue-100 font-heading'>skills</span>",
        direction: "right" %>
    <div data-aos="fade" data-aos-duration="800" class="grid grid-cols-2 gap-4 md:grid-cols-4 lg:grid-cols-5">
      <% @skills.each_with_index do |skill, idx| %>
        <%= render 'partials/minicard', skill: skill, delay: (idx + 1) * 50 %>
      <% end %>
    </div>
  </section>
</section>
