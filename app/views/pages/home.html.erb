<div class="my-10 lg:-mt-10 lg:m-0 grow flex flex-col lg:flex-row justify-center items-center">
  <div class="hidden lg:block m-16 relative">
    <%= image_tag 'home/profile_lg_shape_front.svg', class:"absolute w-1/4 bottom-40 left-0" %>
    <%= image_tag 'home/profile_lg.png' %>
    <%= image_tag 'home/profile_lg_shape_back.svg', class:"absolute top-0 left-0 -z-50" %>
  </div>
  <div class="block lg:hidden m-8 relative">
    <%= image_tag 'home/profile.png' %>
  </div>
  <div class="text-center lg:text-left">
    <p class="text-2xl lg:text-3xl">Hi there!</p>
    <h1 class="my-2 lg:my-3 text-5xl lg:text-6xl">I'm <span class="font-semibold text-blue-500">Jean</span></h1>
    <p>A <span class="lg:text-2xl font-semibold text-blue-500">creative</span> mind with <span class="lg:text-2xl font-semibold text-blue-500">technical</span> skills</p>
  </div>
</div>
<div class="m-5">
  <%= render 'partials/separator',
      title:"past <span class='font-semibold text-blue-500'>projects</span>" %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @projects.each do |project| %>
      <%= render 'partials/card', project: project %>
    <% end %>
  </div>
</div>
<div class="m-5">
  <%= render 'partials/separator',
      title:"my <span class='font-semibold text-blue-500'>skills</span>" %>
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
    <% @skills.each do |skill| %>
      <%= render 'partials/minicard', skill: skill %>
    <% end %>
  </div>
</div>
